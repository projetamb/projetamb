{% extends 'base.html.twig' %}



{% block title %}

{% endblock %}
{% block body %}
    {% if editMode %}
        </br>
        <h1 style="text-align: center">Modification de la structure</h1></br>
    {% else %}
        </br>
        <h1 style="text-align: center">Ajout d'une structure</h1></br>
    {% endif %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                {{ form_start(formEntity) }}
                {{ form_row(formEntity.Name,{'attr': {'placeholder':"Nom de la structure "}}) }}
                {{ form_row(formEntity.Type,{'attr': {'placeholder':"type de la structure "}}) }}
                {{ form_row(formEntity.Adress,{'attr': {'placeholder':"adresse de la structure "}}) }}
                {{ form_row(formEntity.Postalcity,{'attr': {'placeholder':"code postal et ville de la structure "}}) }}
                {{ form_row(formEntity.Descriptive,{'attr': {'placeholder':"description de la structure "}}) }}
                {{ form_row(formEntity.Email,{'attr': {'placeholder':"Email de la structure "}}) }}
                {{ form_row(formEntity.Facebook,{'attr': {'placeholder':"facebook de la structure "}}) }}
                {{ form_row(formEntity.Directorname,{'attr': {'placeholder':"prénom et nom du responsable "}}) }}
                {{ form_row(formEntity.Directorphone,{'attr': {'placeholder':"téléphone du responsable "}}) }}
                {{ form_row(formEntity.Directoremail,{'attr': {'placeholder':"email du responsable "}}) }}
                {{ form_row(formEntity.Logo,{'attr': {'placeholder':"logo de la structure "}}) }}
                {{ form_row(formEntity.Logopage,{'attr': {'placeholder':"logo pleine page de la structure "}}) }}
                {{ form_row(formEntity.Photobandeau,{'attr': {'placeholder':"photo haut de page "}}) }}
                {{ form_row(formEntity.Color,{'attr': {'placeholder':"couleur des pages de l'entité "}}) }}
                {{ form_row(formEntity.Linkmap,{'attr': {'placeholder':"lien map de l'entité "}}) }}
                </br>
                <button type="submit" class="btn btn-success">Enregistrer</button>
                {{ form_end(formEntity) }}

            </div>
        </div>
    </div></br>

{% endblock %}
