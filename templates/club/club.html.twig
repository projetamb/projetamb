<div class="container club_membres">
    <h2 class="text-center club_h2">Membres du bureau</h2>
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4 mb-5">
            <div class="card text-white bg-primary mb-3">
                {% for personnal in personnals %}
                {% if  personnal.role == 'Président' %}
                    <img class="card-img-top" src="./img/{{ personnal.photo }}" alt="Président AMB">
                    <div class="card-body">
                        <h2 class="card-title club_role">{{ personnal.role }} :</h2>
                        <h3 class="card-title"><a title="View Product">{{ personnal.firstname }} {{ personnal.lastname }}</a></h3>
                        <p><i class="fa fa-phone mr-2"></i> {{ personnal.phone }}</p>
                        <p><i class="fa fa-envelope mr-2"></i> {{ personnal.email }}</p>
                    </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-5">
            <div class="card text-white bg-primary mb-3">
                {% for personnal in personnals %}
                {% if  personnal.role == 'Secrétaire' %}
                    <img class="card-img-top" src="./img/{{ personnal.photo }}" alt="Secrétaire AMB">
                    <div class="card-body">
                        <h2 class="card-title club_role">{{ personnal.role }} :</h2>
                        <h3 class="card-title"><a title="View Product">{{ personnal.firstname }} {{ personnal.lastname }}</a></h3>
                        <p><i class="fa fa-phone mr-2"></i> {{ personnal.phone }}</p>
                        <p><i class="fa fa-envelope mr-2"></i> {{ personnal.email }}</p>
                    </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-5">
            <div class="card text-white bg-primary mb-3">
                {% for personnal in personnals %}
                {% if  personnal.role == 'Trésorier' %}
                    <img class="card-img-top" src="./img/{{ personnal.photo }}" alt="Trésorier AMB">
                    <div class="card-body">
                        <h2 class="card-title club_role">{{ personnal.role }} :</h2>
                        <h3 class="card-title"><a title="View Product">{{ personnal.firstname }} {{ personnal.lastname }}</a></h3>
                        <p><i class="fa fa-phone mr-2"></i> {{ personnal.phone }}</p>
                        <p><i class="fa fa-envelope mr-2"></i> {{ personnal.email }}</p>
                    </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<div class="club_docs">
    <h2 class="text-center club_h2">Documents</h2>

    {% for file in files %}
        <li class="text-center"><a href="./docs/{{ file.link }}" target="_blank">{{ file.link }}</a></li>
