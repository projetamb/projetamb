{% extends 'base.html.twig' %}

{% block title %}Hello InstructorController!{% endblock %}

{% block body %}


    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4" style="text-align: center;">Nos instructeurs</h1>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Accueil</a></li>
                        <li class="breadcrumb-item"><a href="#">Test</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Lol</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <!-- Cards Instructeurs-->
    <div class="container">
        <div class="row my-5">
            {% for instructor in instructeur %}
            <div class="col-12 col-md-6 col-lg-4 mb-5">
                <div class="card" style="width: 18rem;">
                    <img src="{{ instructor.photo }}" class="card-img-top" alt="photo instructeur">
                    <div class="card-body">
                        <h5 class="card-title">{{ instructor.lastname }} {{ instructor.firstname }}</h5>
                        <p class="card-text">{{ instructor.description }}</p>
                        <p class="card-text"><a href="{{ instructor.link }}">Site personnel</a></p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <div class="container">
        <div class="row" style="border:1px solid #ffa3d5; height:340px;">
            azejlzaije
        </div>
    </div>

    <!-- Photo by Timothy Eberly on Unsplash -->

{% endblock %}