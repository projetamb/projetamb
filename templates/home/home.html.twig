            </div>
        </div>

        <!--  -->
        <div class="row my-5">
            <!-- Form contact -->
            <div id="form" class="col-6 py-3">
                <h3 class="text-uppercase text-center">Nous contacter</h3>

                <div id="contactForm" class="">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="py-3">
                            {{ form_row(form.name) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.phone) }}
                            {{ form_row(form.message) }}
                        </div>
                        <button type="submit" value="Send" class="btn btn-success text-white">Envoyer</button>
                    {{ form_end(form) }}
                </div>

            </div>
            <!-- Map -->
            <div class="col-6 py-3">
                <h3 class="text-uppercase text-center">Où nous trouver ?</h3>

                <p class="py-3 pl-5">Art Martiaux Basséen<br>
                    45 Rue Gabriel Péri<br>
                    59480 La Bassée</p>
