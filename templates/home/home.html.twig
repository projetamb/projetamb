{% extends 'base.html.twig' %}

{% block body %}
    <!-- Carousel -->
    <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" style="margin: auto;" >
            <div class="carousel-item active">
                <img src="{{ asset('img/carousel1.jpg') }}" class="d-block w-100" alt="carousel1" style="height: 450px;">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/carousel2.jpg') }}" class="d-block w-100" alt="carousel2" style="height: 450px;">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/carousel3.jpg') }}" class="d-block w-100" alt="carousel3" style="height: 450px;">
            </div>
        </div>

        <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
        <div id="carouselButtons" class="text-center">
            <button id="playBtn" type="button" class="btn btn-default btn-xs">
             <span class="glyphicon glyphicon-play"></span>
                <i class="fa fa-play"></i>
            </button>
            <button id="pauseBtn" type="button" class="btn btn-default btn-xs">
            <span class="glyphicon glyphicon-pause"></span>
                <i class="fa fa-pause"></i>
            </button>
        </div>
    </div>

    <div class="container my-5">

        <h2 class="text-center">Association sportive</h2>

        <h1 class="text-center">{{ sitename }}</h1>

        <!-- Présentation -->
        <div class="row my-5 py-5">
            <div class="col-xl-6 col-sm-12 col-12 py-3 px-5">
                <h3 class="text-center">Taekwondo</h3>
                <p>Quisquam pharetra, dignissimos minus corrupti ullamco, praesent illum occaecat, aperiam, feugiat molestiae, tempore aliquid. Mauris nec torquent, autem, id, consequat.</p>
            </div>

            <div class="col-xl-6 col-sm-12 col-12 py-3 px-5">
                <h3 class="text-center">Krav maga</h3>
                <p>Lorem do culpa. Scelerisque conubia minima integer rem molestie exercitation? Necessitatibus, tincidunt? Conubia pariatur occaecati! Diamlorem tempora accusamus eius suscipit.</p>
            </div>
        </div>

        <!--  -->
        <div class="row my-5">
            <div class="col-12">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
            <!-- Map -->
            <div class="col-xl-6 col-sm-12 col-12 py-3">
                <h3 class="text-uppercase text-center">Où nous trouver ?</h3>

                <p class="py-3 text-center">Arts Martiaux Basséens<br>
                    45 Rue Gabriel Péri<br>
                    59480 La Bassée</p>
                <div class="ifram text-center">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2536.089131130008!2d2.812029415158197!3d50.53251288933042!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47dd2f6e367cfde1%3A0x9f8d2c62c0babb6e!2s45+Rue+Gabriel+P%C3%A9ri%2C+59480+La+Bass%C3%A9e!5e0!3m2!1sfr!2sfr!4v1555422888757!5m2!1sfr!2sfr" width="500" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>

            <!-- Form contact -->

            <div id="form" class="col-xl-6 col-sm-12 col-12 py-3">

                <h3 class="text-uppercase text-center">Nous contacter</h3>

                <div id="contactForm" class="">
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="py-3">
                            {{ form_row(form.name) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.phone) }}
                            {{ form_row(form.message) }}
                        </div>
                        <button type="submit" value="Send" class="btn btn-success text-white">Envoyer</button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

